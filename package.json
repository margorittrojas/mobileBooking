{
  "name": "baf",
  "version": "1.0.0",
  "description": "Automation framework for mobile and web testing",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "clean-build": "npm run clean && npm run build",
    "lint": "eslint ./stepDefinitions",
    "appium": "appium",
    "clean": "rimraf .tsbuild/ && rimraf allure-results/ && rimraf junit-report/ && rimraf poGenerated/",
    "start-web": "npm run clean && npx tsc && npx wdio run ./config/wdio.chrome.conf.ts",
    "start-mobile": "npm run clean && npx tsc && npx wdio run ./config/wdio.mobile.conf.ts --cucumberOpts.tagExpression ",
    "start-mobile-bs": "npm run clean && npx tsc && npx wdio run ./config/wdio.mobile.bs.conf.ts --cucumberOpts.tagExpression \"@mobile \"",
    "clean-report": "allure generate --clean ./allure-results",
    "open-report": "allure open",
    "version": "auto-changelog -p"
  },
  "keywords": [
    "appium",
    "webdriverio",
    "typescript",
    "mobile automation",
    "behaviour driven development",
    "bdd",
    "selenium",
    "webdriverJS",
    "gherkin",
    "automation testing",
    "android"
  ],
  "author": "Carlos Gauto",
  "license": "ISC",
  "dependencies": {
    "@wdio/cli": "^7.7.3",
    "allure-commandline": "^2.13.8",
    "auto-changelog": "^2.3.0",
    "expect-webdriverio": "^3.1.0",
    "faker": "^5.5.3",
    "rimraf": "^3.0.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "@wdio/allure-reporter": "^7.7.3",
    "@wdio/appium-service": "^7.7.3",
    "@wdio/browserstack-service": "^7.7.3",
    "@wdio/cucumber-framework": "^7.7.3",
    "@wdio/firefox-profile-service": "^7.7.3",
    "@wdio/junit-reporter": "^7.7.3",
    "@wdio/local-runner": "^7.7.3",
    "@wdio/sauce-service": "^7.7.3",
    "@wdio/spec-reporter": "^7.7.3",
    "appium": "^1.22.0",
    "chromedriver": "^90.0.1",
    "eslint": "^7.28.0",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.2",
    "wdio-aws-device-farm-service": "^7.0.0",
    "wdio-chromedriver-service": "^7.1.0",
    "wdio-cucumber-reporter": "0.0.2",
    "wdio-docker-service": "^3.1.2",
    "wdio-mochawesome-reporter": "^4.0.0",
    "wdio-slack-service": "^2.0.9",
    "wdio-video-reporter": "^3.1.1"
  }
}
